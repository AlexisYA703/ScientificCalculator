<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DynnamicCalculator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CalculatorInputButton">
        <item name="android:background">@drawable/button_shape_input</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:onClick">onCalcClick</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="CalculatorInputButtonPride" parent="CalculatorInputButton">
        <item name="android:background">@drawable/button_shape_input_pride</item>
        <item name="android:onClick">onCalcClick</item>
    </style>

    <style name="CalculatorFirstRow" parent="CalculatorInputButton">
        <item name="android:textColor">#010101</item>
        <item name="android:background">@drawable/button_shape_first_row</item>
        <item name="android:onClick">onCalcClick</item>
    </style>

    <style name="CalculatorOrangeRow" parent="CalculatorInputButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_shape_orange_row</item>
        <item name="android:onClick">onCalcClick</item>
    </style>

    <style name="CalculatorScientificOperator">
        <item name="android:textSize">24sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:onClick">onCalcClick</item>
        <item name="android:background">@drawable/button_shape_scientific</item>
    </style>

</resources>